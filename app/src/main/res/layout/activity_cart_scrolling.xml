<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout_cart"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="false"
        android:descendantFocusability="blocksDescendants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/foodCartName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="71dp"
            android:layout_marginBottom="4dp"
            android:text="FoodCartName"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBottom_toTopOf="@id/foodCartNote"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/foodCartNote"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="25dp"
            android:text="Note"
            app:layout_constraintEnd_toStartOf="@+id/foodCartPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/foodCartName" />

        <TextView
            android:id="@+id/foodCartPrice"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="19dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/removeFoodCartButton"
            app:layout_constraintStart_toEndOf="@+id/foodCartNote"
            app:layout_constraintTop_toTopOf="@+id/foodCartNote"
            app:layout_constraintVertical_bias="0.8" />

        <ImageButton
            android:id="@+id/addFoodCartButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:contentDescription="add food"
            android:elevation="6dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:stateListAnimator="@animator/button_elevation"
            android:tint="@color/colorPrimaryDark"
            app:layout_constraintStart_toEndOf="@+id/foodCartName"
            app:layout_constraintTop_toTopOf="@+id/foodCartName"
            app:srcCompat="@drawable/add_circle_black" />

        <ImageButton
            android:id="@+id/removeFoodCartButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="remove food"
            android:elevation="6dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:stateListAnimator="@animator/button_elevation"
            android:tint="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/addFoodCartButton"
            app:layout_constraintTop_toTopOf="@+id/foodCartName"
            app:srcCompat="@drawable/remove_circle_black" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>